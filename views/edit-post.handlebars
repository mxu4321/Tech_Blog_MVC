<div class="edit-post-page">
    <h2 class="page-title">Edit a Post</h2>
    <form class="form" id="edit-post-form" data-id="{{post.id}}">
        <div class="form-group">
            <label for="post-title">Title:</label>
            <input id="edit-post-title" class="form-input" type="text" />
        </div>
        <div class="form-group">
            <label for="post-content">Content:</label>
            <textarea id="edit-post-content" class="form-control" aria-label="With textarea"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>
</div>

<script src="/js/editPost.js"></script>